<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
      <androidx.appcompat.widget.Toolbar
         android:layout_width="match_parent"
         android:layout_height="40dp"
         app:title=""
         app:titleTextColor="#ffffff"
         android:background="#3F51B5"
         android:id="@+id/toolBar"
         android:layout_gravity="top">
      </androidx.appcompat.widget.Toolbar>
   <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerMessage"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/toolBar"
      android:layout_above="@id/bottom"/>
   <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="#111"/>
   <RelativeLayout
      android:id="@+id/bottom"
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">
      <ImageView
         android:onClick="onClickOpenLibrary"
         android:id="@+id/imgButton"
         android:layout_width="35dp"
         android:layout_height="35dp"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="3dp"
         android:src="@drawable/ic_add_to_photos_black_24dp"
         android:layout_gravity="center_vertical"
         android:background="@drawable/ic_custom_options" />
      <Spinner
         android:id="@+id/spinner"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="5dp"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_toRightOf="@+id/imgButton"
         android:layout_toEndOf="@+id/imgButton" />
      <EditText
         android:layout_marginLeft="5dp"
         android:layout_marginRight="45dp"
         android:paddingLeft="5dp"
         android:id="@+id/edtMessage"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@drawable/custom_edittext"
         android:layout_toRightOf="@id/spinner"
         android:paddingStart="5dp"
         tools:ignore="RtlSymmetry" />
      <ImageButton
         android:onClick="onClickSentMessage"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="5dp"
         android:id="@+id/btn_send"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:background="@drawable/ic_send_black_24dp"
         android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true" />
   </RelativeLayout>
</RelativeLayout>