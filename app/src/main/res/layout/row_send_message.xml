<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical" android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:gravity="end">
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   <LinearLayout
      android:layout_weight="1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/custom_message_send"
      android:layout_marginTop="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginStart="80dp"
      android:layout_marginLeft="80dp">
      <TextView
         android:layout_gravity="right"
         android:text="username"
         android:id="@+id/txtusername"
         android:textSize="12sp"
         android:textColor="#f12"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="5dp"/>
      <TextView
         android:id="@+id/txtMessage"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="5dp"
         android:gravity="left"
         android:paddingStart="15dp"
         android:paddingEnd="15dp"
         android:paddingTop="2dp"
         android:paddingBottom="5dp"
         android:text="Heaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaallo"
         android:textColor="#fff"
         android:textSize="20sp" />
      <TextView
         android:id="@+id/txtDate"
         android:textSize="10sp"
         android:layout_gravity="right"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="12:15 AM"
         android:layout_marginEnd="5dp"
         android:layout_marginRight="5dp" />
   </LinearLayout>
      <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/item_profile_image"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:src="@drawable/profile_image"
         android:layout_marginTop="5dp"
         android:layout_marginRight="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginEnd="5dp"
         android:layout_marginStart="10dp" />
</LinearLayout>
      <ImageView
         android:id="@+id/delete_item_mesage"
         android:layout_marginTop="10dp"
         android:visibility="gone"
         android:layout_gravity="center"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/delete" />
</LinearLayout>