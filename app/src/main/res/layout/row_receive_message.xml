<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="wrap_content">
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="5dp">
      <de.hdodenhof.circleimageview.CircleImageView
         android:layout_gravity="top"
         android:id="@+id/item_profile_image"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginTop="10dp"
         android:src="@drawable/profile_image" />
      <LinearLayout
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:background="@drawable/ic_custom_message_receive"
         android:layout_marginRight="80dp"
         android:layout_marginEnd="80dp"
         android:layout_marginStart="10dp">
         <TextView
            android:text="username"
            android:textColor="#f12"
            android:id="@+id/txtusername"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
         <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="20sp"
            android:textColor="#fff"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"/>
         <TextView
            android:id="@+id/txtDate"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:15 AM"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp" />
      </LinearLayout>
   </LinearLayout>
         <ImageView
            android:id="@+id/delete_item_mesage"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delete" />
</LinearLayout>